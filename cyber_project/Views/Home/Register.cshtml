@model cyber_project.Models.RegisterModel

@{
    ViewBag.Title = "Register";
}

<body>
    <h1 class="error">Register Form</h1>
    <div class="w3layouts-two-grids">
        <div class="mid-class">
            <div class="txt-left-side">
                <h2> Register Here </h2>
                <p>Welcome to our forum</p>
                <form action="#" method="post">
                    <div class="form-group">
                        <div class="form-left-to-w3l">
                            <span class="fa fa-user" aria-hidden="true"></span>
                            @*<input type="email" name="email" placeholder="Email" required="">*@
                            @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @type = "name", @name = "name", @placeholder = "Name", @required = "" } })
                            <div class="clear"></div>
                        </div>
                        @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <div class="form-left-to-w3l">
                            <span class="fa fa-envelope-o" aria-hidden="true"></span>
                            @*<input type="password" name="password" placeholder="Password" required="">*@
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @type = "email", @name = "email", @placeholder = "Email", @required = "" } })
                            <div class="clear"></div>
                        </div>
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <div class="form-left-to-w3l ">
                            <span class="fa fa-lock" aria-hidden="true"></span>
                            @*<input type="password" name="password" placeholder="Password" required="">*@
                            @Html.PasswordFor(model => model.Password, new { htmlAttributes = new { @type = "password", @name = "password", @placeholder = "Password", @required = "" } })
                            <div class="clear"></div>
                        </div>
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                        <div class="main-two-w3ls">
                            <div class="right-side-forget">
                                <a href="Register" class="for">Reset</a>
                            </div>
                        </div>
                        <div class="btnn">
                            <button type="submit">Sign up </button>
                        </div>
</form>
                <div class="w3layouts_more-buttn">
                    <h3>
                        Already Have an account..
                        <a href="Login">
                            Login Here
                        </a>
                    </h3>
                </div>

            </div>
            <div class="img-right-side">
                <h3>Welcome To Register Form</h3>
                <img src="~/images/pho.jpg" class="img-fluid" alt="">
            </div>
        </div>
    </div>
</body>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}