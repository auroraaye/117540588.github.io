@model cyber_project.Models.UserModel

@{
    ViewBag.Title = "Login";
}

<body>
    <h1 class="error">Login Form</h1>
    <div class="w3layouts-two-grids">
        <div class="mid-class">
            <div class="txt-left-side">
                <h2> Login Here </h2>
                <p>Welcome to our forum</p>
                <form action="#" method="post">
                    <div class="form-group">
                        <div class="form-left-to-w3l">
                            <span class="fa fa-user" aria-hidden="true"></span>
                            @*<input type="email" name="email" placeholder="Email" required="">*@
                            @Html.TextBoxFor(model => model.Username, new { htmlAttributes = new { @type = "name", @name = "name", @placeholder = "Name", @required = "" } })
                            <div class="clear"></div>
                        </div>
                        @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <div class="form-left-to-w3l ">
                            <span class="fa fa-lock" aria-hidden="true"></span>
                            @*<input type="password" name="password" placeholder="Password" required="">*@
                            @Html.PasswordFor(model => model.Password, new { htmlAttributes = new { @type = "password", @name = "password", @placeholder = "Password", @required = "" } })
                            <div class="clear"></div>
                        </div>
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <div class="main-two-w3ls">
                            <div class="right-side-forget">
                                <a href="Login" class="for">Reset</a>
                            </div>
                        </div>
                        <div class="btnn">
                            <button type="submit">Login </button>
                        </div>
                    </div>
</form>
                <div class="w3layouts_more-buttn">
                    <h3>
                        Don't Have an account..?
                        <a href="Register">
                            Register Here
                        </a>
                    </h3>
                </div>

            </div>
            <div class="img-right-side">
                <h3>Welcome To Login Form</h3>
                <img src="~/images/pho1.jpg" class="img-fluid" alt="">
            </div>
        </div>
    </div>
</body>